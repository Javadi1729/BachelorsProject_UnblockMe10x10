<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                                   xmlns:app="http://schemas.android.com/apk/res-auto"
                                                   xmlns:tools="http://schemas.android.com/tools"
                                                   android:orientation="vertical"
                                                   android:layout_width="match_parent"
                                                   android:layout_height="match_parent"
                                                   android:background="@drawable/dialog_back_1">

    <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:background="@drawable/dialog_back_2" android:layout_margin="16dp">
        <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center" app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent" app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintBottom_toBottomOf="parent">
            <TextView
                    android:text="Options"
                    android:layout_width="match_parent"
                    android:layout_height="86dp"
                    android:id="@+id/gamescene_options_title_txtview"
                    android:textSize="48sp"
                    android:textStyle="bold"
                    android:gravity="center"
                    android:textColor="#132747"
                    android:layout_margin="16dp"/>
            <ScrollView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">
                <LinearLayout android:layout_width="match_parent" android:layout_height="wrap_content"
                              android:orientation="vertical">
                    <Button
                            android:text="resume"
                            android:layout_width="match_parent"
                            android:layout_height="64dp"
                            android:id="@+id/gamescene_options_resume_btn"
                            android:background="@drawable/activity_home_main_button"
                            android:layout_marginTop="16dp" android:layout_marginLeft="16dp"
                            android:layout_marginStart="16dp" android:layout_marginRight="16dp"
                            android:layout_marginEnd="16dp" android:textColor="#132747" android:textStyle="bold"
                            android:textSize="20sp"/>
                    <Button
                            android:text="reset"
                            android:layout_width="match_parent"
                            android:layout_height="64dp"
                            android:id="@+id/gamescene_options_reset_btn"
                            android:background="@drawable/activity_home_main_button"
                            android:layout_marginTop="16dp"
                            android:layout_marginLeft="16dp" android:layout_marginStart="16dp"
                            android:layout_marginRight="16dp" android:layout_marginEnd="16dp"
                            android:textColor="#132747"
                            android:textSize="20sp" android:textStyle="bold"/>
                    <Button
                            android:text="Levels"
                            android:layout_width="match_parent"
                            android:layout_height="64dp"
                            android:id="@+id/gamescene_options_levels_btn"
                            android:background="@drawable/activity_home_main_button"
                            android:layout_marginTop="16dp"
                            android:layout_marginLeft="16dp" android:layout_marginStart="16dp"
                            android:layout_marginRight="16dp" android:layout_marginEnd="16dp"
                            android:textColor="#132747"
                            android:textSize="20sp" android:textStyle="bold"/>
                    <Button
                            android:text="Home"
                            android:layout_width="match_parent"
                            android:layout_height="64dp"
                            android:id="@+id/gamescene_options_home_btn"
                            android:background="@drawable/activity_home_main_button"
                            android:layout_marginTop="16dp" android:layout_marginBottom="16dp"
                            android:layout_marginLeft="16dp" android:layout_marginStart="16dp"
                            android:layout_marginRight="16dp" android:layout_marginEnd="16dp"
                            android:textColor="#132747"
                            android:textSize="20sp" android:textStyle="bold"/>
                </LinearLayout>
            </ScrollView>
        </LinearLayout>
    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.constraintlayout.widget.ConstraintLayout>