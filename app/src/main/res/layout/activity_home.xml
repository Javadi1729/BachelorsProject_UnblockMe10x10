<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".ActivityHome"
        android:id="@+id/mainView"
        android:background="#80B1AB">
    <Button
            android:layout_width="48dp"
            android:layout_height="48dp" app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="@+id/imageView" android:id="@+id/exitButton"
            app:layout_constraintBottom_toBottomOf="parent"
            android:textColor="#132747"
            android:textSize="16sp" android:textStyle="bold" app:layout_constraintHorizontal_bias="1.0"
            android:background="@drawable/activity_home_exit_button" android:layout_marginBottom="48dp"/>
    <Button
            android:background="@drawable/activity_home_main_button"
            android:layout_width="168dp"
            android:layout_height="48dp" app:layout_constraintStart_toStartOf="@+id/home_levels_btn"
            app:layout_constraintEnd_toEndOf="@+id/home_levels_btn" android:id="@+id/customLevelBtn"
            android:hapticFeedbackEnabled="false"
            style="@style/Widget.AppCompat.Button"
            android:text="Custom Level"
            android:focusableInTouchMode="false" android:textColor="#132747"
            android:textSize="16sp" android:textStyle="bold" android:fontFamily="sans-serif-medium"
            app:layout_constraintHorizontal_bias="0.498"
            app:layout_constraintTop_toBottomOf="@+id/home_levels_btn" app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintVertical_bias="0.115"/>
    <ImageView
            android:layout_width="300dp"
            android:layout_height="150dp" app:srcCompat="@drawable/activity_home_logo"
            android:id="@+id/imageView"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toEndOf="parent" app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintVertical_bias="0.177" app:layout_constraintHorizontal_bias="0.495"/>
    <Button
            android:layout_width="48dp"
            android:layout_height="48dp" android:id="@+id/musicController"
            app:layout_constraintStart_toStartOf="@+id/imageView" app:layout_constraintEnd_toEndOf="@+id/imageView"
            app:layout_constraintBottom_toBottomOf="parent"
            android:textStyle="bold"
            android:background="@drawable/activity_home_music_off_button"
            android:layout_marginBottom="48dp"
    />
    <Button
            android:text="Default Levels"
            android:layout_width="168dp"
            android:layout_height="48dp" app:layout_constraintStart_toStartOf="@+id/imageView"
            app:layout_constraintEnd_toEndOf="@+id/imageView" android:id="@+id/home_levels_btn"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/imageView" app:layout_constraintHorizontal_bias="0.498"
            app:layout_constraintVertical_bias="0.204" android:textSize="16sp" android:textStyle="bold"
            android:textColor="#132747" android:background="@drawable/activity_home_main_button"
            android:soundEffectsEnabled="false"/>
    <Button
            android:layout_width="48dp"
            android:layout_height="48dp" app:layout_constraintStart_toStartOf="@+id/imageView"
            app:layout_constraintEnd_toEndOf="parent" android:id="@+id/helpButton"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintHorizontal_bias="0.0" android:layout_marginBottom="48dp"
            android:background="@drawable/activity_home_help_button"
            android:textStyle="bold"/>

</androidx.constraintlayout.widget.ConstraintLayout>