<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".ActivitySplashScreen"
        android:background="#274a8a">

    <ImageView
            android:layout_width="256dp"
            android:layout_height="125dp"
            app:srcCompat="@drawable/activity_splashscreen_logo"
            android:id="@+id/splashScreen_logo_imageView"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintVertical_bias="0.294"/>
    <TextView
            android:text="by\nAsghar Javadi"
            android:layout_width="134dp"
            android:layout_height="81dp"
            app:layout_constraintStart_toStartOf="@+id/splashScreen_logo_imageView"
            app:layout_constraintEnd_toEndOf="@+id/splashScreen_logo_imageView"
            android:id="@+id/splashScreen_creatorName_textView"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/splashScreen_logo_imageView"
            android:gravity="center"
            android:textColor="#FF9b29"
            android:textSize="18sp"
            android:textStyle="bold"
            app:layout_constraintHorizontal_bias="0.498"
            app:layout_constraintVertical_bias="0.896" android:layout_marginBottom="48dp"/>

</androidx.constraintlayout.widget.ConstraintLayout>