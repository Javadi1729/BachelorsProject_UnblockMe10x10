<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".ActivityHelpHowToPlay" android:orientation="vertical"
        android:background="#9cc0f6">

    <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
    >

        <androidx.appcompat.widget.Toolbar
                android:layout_width="match_parent"
                android:layout_height="64dp"
                android:background="#03378b"
                android:theme="?attr/actionBarTheme"
                android:minHeight="?attr/actionBarSize" android:id="@+id/howToPlay_toolbar"
                app:layout_constraintStart_toStartOf="parent" app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintTop_toTopOf="parent"/>
        <Button
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:id="@+id/howToPlay_backBtn"
                android:background="@drawable/back_button" app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintBottom_toBottomOf="@+id/howToPlay_toolbar"
                app:layout_constraintTop_toTopOf="parent" app:layout_constraintHorizontal_bias="0.044"/>
        <TextView
                android:text="How to play"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:id="@+id/howToPlay__actionbar_textView"
                android:gravity="center_vertical"
                android:paddingLeft="16dp" android:textSize="24sp"
                android:textColor="#ffffff" android:textStyle="bold"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintTop_toTopOf="@+id/howToPlay_toolbar"
                app:layout_constraintEnd_toEndOf="parent" app:layout_constraintStart_toEndOf="@+id/howToPlay_backBtn"
                app:layout_constraintHorizontal_bias="1.0" android:layout_marginLeft="64dp"
                android:layout_marginStart="64dp"/>
    </androidx.constraintlayout.widget.ConstraintLayout>

    <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
    >
        <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" android:layout_margin="16dp">
            <TextView
                    android:text="Your goal in the game is to take the goal block to the exit gate:"
                    android:layout_width="366dp"
                    android:layout_height="wrap_content"
                    android:id="@+id/howToPlay_textView13"
                    android:textColor="#03378b"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:layout_marginBottom="16dp"/>
            <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="540dp"
                    app:srcCompat="@drawable/howtoplay_01"
                    android:id="@+id/howToPlay_imageView6"
                    android:layout_marginBottom="16dp"/>
            <TextView
                    android:text="By tapping on a block, it will be selected and the available moves will be shown:"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/textView12"
                    android:textColor="#03378b"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:layout_marginBottom="16dp"/>
            <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="540dp" app:srcCompat="@drawable/howtoplay_02"
                    android:id="@+id/imageView3" android:layout_marginBottom="16dp"/>
            <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="540dp" app:srcCompat="@drawable/howtoplay_03"
                    android:id="@+id/imageView6" android:layout_marginBottom="16dp"/>
            <TextView
                    android:text="If you tap on one of those available sections, the block will move there:"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/textView15"
                    android:textColor="#03378b"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:layout_marginBottom="16dp"/>
            <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="540dp" app:srcCompat="@drawable/howtoplay_04"
                    android:id="@+id/imageView7" android:layout_marginBottom="16dp"/>
            <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="540dp" app:srcCompat="@drawable/howtoplay_05"
                    android:id="@+id/imageView8" android:layout_marginBottom="16dp"/>
            <TextView
                    android:text="Horizontal blocks can move back and forward, verticals up and down, and square blocks Both:"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/textView17"
                    android:textColor="#03378b"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:layout_marginBottom="16dp"/>
            <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="540dp" app:srcCompat="@drawable/howtoplay_06"
                    android:id="@+id/imageView9" android:layout_marginBottom="16dp"/>
            <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="540dp" app:srcCompat="@drawable/howtoplay_07"
                    android:id="@+id/imageView10" android:layout_marginBottom="16dp"/>
            <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="540dp" app:srcCompat="@drawable/howtoplay_08"
                    android:id="@+id/imageView11" android:layout_marginBottom="16dp"/>
            <TextView
                    android:text="When the goal block reaches exit, you win:"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/textView20"
                    android:textColor="#03378b"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:layout_marginBottom="16dp"/>
            <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="540dp" app:srcCompat="@drawable/howtoplay_09"
                    android:id="@+id/imageView12" android:layout_marginBottom="16dp"/>
            <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="540dp" app:srcCompat="@drawable/howtoplay_10"
                    android:id="@+id/imageView13" android:layout_marginBottom="16dp"/>
            <TextView
                    android:text="Note that You have limited moves (up to 50) and if you don't complete the game before that, you will fail:"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/textView22"
                    android:textColor="#03378b"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:layout_marginBottom="16dp"/>
            <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="540dp" app:srcCompat="@drawable/howtoplay_11"
                    android:id="@+id/imageView14" android:layout_marginBottom="16dp"/>
            <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="540dp" app:srcCompat="@drawable/howtoplay_12"
                    android:id="@+id/imageView15" android:layout_marginBottom="16dp"/>
            <TextView
                    android:text="Go on and enjoy the game!\n"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/textView23"
                    android:textColor="#03378b"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:layout_marginBottom="16dp"/>
        </LinearLayout>
    </ScrollView>

</LinearLayout>