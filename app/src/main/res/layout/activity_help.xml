<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".ActivityHelp" android:background="#9cc0f6">

    <androidx.appcompat.widget.Toolbar
            android:layout_width="match_parent"
            android:layout_height="64dp"
            android:background="#03378b"
            android:theme="?attr/actionBarTheme"
            android:minHeight="?attr/actionBarSize" android:id="@+id/toolbar"
            app:layout_constraintTop_toTopOf="parent" app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintHorizontal_bias="0.0" app:layout_constraintVertical_bias="0.0"/>
    <Button
            android:layout_width="48dp"
            android:layout_height="48dp" app:layout_constraintStart_toStartOf="parent"
            android:id="@+id/backBtn"
            app:layout_constraintBottom_toBottomOf="@+id/toolbar" app:layout_constraintTop_toTopOf="@+id/toolbar"
            app:layout_constraintEnd_toEndOf="@+id/toolbar" app:layout_constraintHorizontal_bias="0.044"
            android:background="@drawable/back_button"/>
    <TextView
            android:text="Help"
            android:layout_width="match_parent"
            android:layout_height="48dp" app:layout_constraintTop_toTopOf="@+id/backBtn"
            android:id="@+id/textView4"
            app:layout_constraintBottom_toBottomOf="@+id/backBtn" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/backBtn" android:gravity="center_vertical"
            app:layout_constraintHorizontal_bias="0.0" app:layout_constraintVertical_bias="0.0"
            android:layout_marginRight="16dp" android:layout_marginEnd="16dp" android:layout_marginLeft="64dp"
            android:layout_marginStart="64dp" android:paddingLeft="16dp" android:textSize="24sp"
            android:textColor="#ffffff" android:textStyle="bold"/>
    <Button
            android:text="General"
            android:layout_width="match_parent"
            android:layout_height="56dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:id="@+id/help_general_button"
            app:layout_constraintTop_toBottomOf="@+id/toolbar"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintVertical_bias="0.0"
            android:gravity="center_vertical"
            android:paddingLeft="16dp"
            android:background="@drawable/activity_help_section_button"/>
    <Button
            android:text="Input Format"
            android:layout_width="match_parent"
            android:layout_height="56dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:id="@+id/help_inputFormat_button"
            app:layout_constraintTop_toBottomOf="@+id/help_howToPlay_button"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintVertical_bias="0.0"
            android:gravity="center_vertical"
            android:paddingLeft="16dp"
            android:background="@drawable/activity_help_section_button" app:layout_constraintHorizontal_bias="0.0"/>
    <Button
            android:text="how to play"
            android:layout_width="match_parent"
            android:layout_height="56dp"
            app:layout_constraintBottom_toBottomOf="parent"
            android:id="@+id/help_howToPlay_button"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:gravity="center_vertical"
            android:paddingLeft="16dp"
            android:background="@drawable/activity_help_section_button" app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintTop_toBottomOf="@+id/help_general_button" app:layout_constraintVertical_bias="0.0"/>
    <Button
            android:text="about app"
            android:layout_width="match_parent"
            android:layout_height="56dp"
            android:id="@+id/help_aboutApp_button"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:gravity="center_vertical"
            android:paddingLeft="16dp"
            android:background="@drawable/activity_help_section_button" app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintTop_toBottomOf="@+id/help_inputFormat_button"
            app:layout_constraintVertical_bias="0.0"/>
</androidx.constraintlayout.widget.ConstraintLayout>